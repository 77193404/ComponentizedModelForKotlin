<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/first_bg"
    android:gravity="end"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/countdownTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="3s"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/qb_px_45"
        android:background="@drawable/countdown_bg"
        android:paddingTop="@dimen/qb_px_5"
        android:paddingBottom="@dimen/qb_px_5"
        android:paddingStart="@dimen/qb_px_45"
        android:paddingEnd="@dimen/qb_px_45"
        android:layout_marginTop="@dimen/qb_px_40"
        android:layout_marginEnd="@dimen/qb_px_60"/>



</LinearLayout>